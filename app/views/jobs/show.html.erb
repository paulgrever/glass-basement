<div class="col s8 m8 l9 card-panel red lighten-2">
  <div>
    <h3 class="center-align "><%= company %></h3>
    <h4 class="center-align" ><%= @job.title %> </h4>
    <p class="center-align text-flow"><%= @job.job_description %> </p>
  </div>
</div>
<div class="row">
  <div class="col sm4 m4 l4">
    <div class="messages">
      <% @job.chats.each do |chat| %>
        <div>
          <%= chat.body %>
        </div>
      <% end %>
    </div>
    <div id="chat-form">
      <%= form_for(:chat, url: chats_path, method: :post, remote: true) do |f|  %>
        <%= f.text_field :body, id:"chat-input" %>
        <%= f.hidden_field :job_id, value: @job.id %>
        <%= f.submit "Send", class:"red btn" %>
      <% end %>
    </div>
  </div>

  <div class="col s5 m5 l5">
      <div class="card">
        <div class="card-content card-large yellow lighten-3">
          <span class="card-title activator grey-text text-darken-4">Card Title <i class="mdi-navigation-more-vert right"></i></span>
          <p><a href="#">This is a link</a></p>
          <p>Interview Number</p>
          <p>Interview Number</p>
          <p>Interview Number</p>
          <p>Interview Number</p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">Card Title <i class="mdi-navigation-close right"></i></span>
          <h1>Here is some more information about this product that is only revealed once clicked on. How does this work if expanded?????</h1>
        </div>
      </div>
  </div>
</div>
