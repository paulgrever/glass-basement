<div class="col s4 m4 l3 card-panel teal lighten-2 sidebar">
  <h5>Regions:</h5>
  <ul class="collapsible" data-collapsible="accordion">
    <% regions.each do |region| %>
      <li> 
        <div class="collapsible-header center-align">
          <strong><%= region.place %></strong>
        </div>
        <% region.companies.each do |company|  %>
          <div class="collapsible-body center-align">
            <h5 class="amber-text accent-2"><%= company.name %></h5>
              <% company.jobs.each do |job| %>
                <%= link_to(job.title, job_path(job), class:"red btn-flat") %>
              <% end %>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
  <div class="bottom">
      <!-- Modal Trigger -->
      <a class="btn-floating btn-large waves-effect waves-light modal-trigger red" href="#modal1"><i class="mdi-content-add"></i></a

  <!-- Modal Structure -->
  </div>
</div>

  <div id="modal1" class="modal modal-fixed-footer">
    <div class="modal-content">
      <h4>Post a New Job</h4>
      <div id="chat-form">
        <%= form_for(:job, url: jobs_path, method: :post) do |f|  %>
          <%= f.text_field :body, id:"chat-input" %>
          <%= f.hidden_field :job_id %>
          <%= f.submit "Send", class:"red btn" %>
        <% end %>
    </div>
      
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Agree</a>
    </div>
  </div>
          
